<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?> <?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cooked.BerandaController">
   <top>
      <ToolBar prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #EEBF43;" BorderPane.alignment="CENTER">
        <items>
            <Label text="COOKED FEED" textFill="#c54f2d">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </Label>
            
            <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#refreshFeed" text="Refresh" />
            
            <Button fx:id="btnUpload" mnemonicParsing="false" onAction="#bukaHalamanUpload" style="-fx-background-color: #2D8BC5;" text="Upload Resep Baru" textFill="WHITE" />
            
            <Pane HBox.hgrow="ALWAYS" /> 
            
            <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
        </items>
      </ToolBar>
   </top>
   <center>
      <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="feedContainer" spacing="20.0" style="-fx-background-color: #f4f4f4;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>