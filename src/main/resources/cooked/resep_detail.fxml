<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="controller.ResepDetailController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #FFF8E7;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   
   <left>
      <VBox prefHeight="768.0" prefWidth="250.0" spacing="10.0" style="-fx-background-color: #FF451F;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnKembali" alignment="BASELINE_LEFT" onAction="#handleBack" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: WHITE; -fx-cursor: hand;" text="⬅ Kembali">
               <font><Font name="System Bold" size="14.0" /></font>
               <padding><Insets left="20.0" /></padding>
               <VBox.margin><Insets top="40.0" /></VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>

   <center>
      <StackPane fx:id="centerPane" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="${centerPane.height}" fitWidth="${centerPane.width}" pickOnBounds="true" preserveRatio="false">
               <image><Image url="@bg_beranda.png" /></image>
            </ImageView>

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: transparent;">
                     <padding><Insets bottom="50.0" top="40.0" /></padding>
                     
                     <VBox maxWidth="1100.0" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10,0,0,0);">
                        <padding><Insets bottom="40.0" left="40.0" right="40.0" top="40.0" /></padding>
                        <children>
                           
                           <Label fx:id="lblJudulHeader" text="JUDUL RESEP" textFill="#333" wrapText="true">
                              <font><Font name="System Bold" size="36.0" /></font>
                           </Label>
                           
                           <HBox spacing="30.0" alignment="TOP_LEFT">
                              <children>
                                 <StackPane style="-fx-border-color: #eee; -fx-border-width: 1; -fx-padding: 5; -fx-border-radius: 10;">
                                    <ImageView fx:id="imgResepHeader" fitHeight="350.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
                                       <image><Image url="@bg_baru.png" /></image>
                                    </ImageView>
                                 </StackPane>
                                 
                                 <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                                    <children>
                                       <HBox spacing="15.0">
                                          <children>
                                             <Label fx:id="lblPenulis" onMouseClicked="#handleProfil" text="by Username" textFill="#FF451F" underline="true" style="-fx-cursor: hand;">
                                                <font><Font name="System Bold" size="16.0" /></font>
                                             </Label>
                                             <Label fx:id="lblLikeCount" text="❤ 0 Like" textFill="#888">
                                                <font><Font size="16.0" /></font>
                                             </Label>
                                          </children>
                                       </HBox>
                                       
                                       <VBox spacing="5.0" style="-fx-background-color: #FFF8E7; -fx-background-radius: 10; -fx-padding: 15;">
                                          <Label text="Tentang Resep:" textFill="#FF451F"><font><Font name="System Bold" size="16.0" /></font></Label>
                                          <Label fx:id="lblDeskripsi" text="..." wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #333;" />
                                       </VBox>
                                       
                                       <Button fx:id="btnLike" onAction="#handleLike" text="SUKA RESEP INI ❤" style="-fx-background-color: #FF451F; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 30; -fx-padding: 10 25 10 25;">
                                          <VBox.margin><Insets top="10.0" /></VBox.margin>
                                       </Button>
                                    </children>
                                 </VBox>
                              </children>
                           </HBox>
                           
                           <HBox style="-fx-background-color: #eee;" prefHeight="2.0" />

                           <VBox spacing="8.0" style="-fx-background-color: #FFF8E7; -fx-background-radius: 10; -fx-padding: 15;">
                               <Label text="Langkah Pembuatan:" textFill="#FF451F">
                                  <font><Font name="System Bold" size="22.0" /></font>
                               </Label>
                               <Label fx:id="lblLangkah" text="..." wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-line-spacing: 5;" />
                           </VBox>

                           <VBox spacing="8.0" style="-fx-background-color: #FFF8E7; -fx-background-radius: 10; -fx-padding: 15;">
                               <Label text="Bahan-bahan:" textFill="#FF451F">
                                  <font><Font name="System Bold" size="22.0" /></font>
                               </Label>
                               <Label fx:id="lblBahan" text="..." wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-line-spacing: 5;" />
                           </VBox>

                        </children>
                     </VBox>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </StackPane>
   </center>
</BorderPane>