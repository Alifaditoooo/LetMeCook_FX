   <children>
      <ImageView fitHeight="${rootPane.height}" fitWidth="${rootPane.width}" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@bg login register.png" />
         </image>
      </ImageView>

      <VBox alignment="BOTTOM_CENTER" spacing="15.0" maxHeight="Infinity" maxWidth="Infinity">
         <padding>
            <Insets bottom="80.0" />
         </padding>
         
         <children>
            <Label text="Halo Bre," textFill="BLACK">
               <font>
                  <Font name="Comic Sans MS Bold" size="36.0" />
               </font>
            </Label>
            
            <Label text="Gua ada buat bantu viralin masakan lo semua" textFill="#555555" wrapText="true">
               <font>
                  <Font name="Comic Sans MS" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>

            <TextField fx:id="regUser" maxWidth="400.0" prefHeight="50.0" promptText="Masukan Username Baru" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10; -fx-background-color: white;">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>

            <PasswordField fx:id="regPw" maxWidth="400.0" prefHeight="50.0" promptText="Masukan Password Baru" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10; -fx-background-color: white;">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>

            <Button fx:id="btnDaftar" onAction="#handleRegisterAction" maxWidth="400.0" mnemonicParsing="false" prefHeight="50.0" style="-fx-background-color: #FF451F; -fx-background-radius: 30; -fx-cursor: hand;" text="SIGN UP" textFill="WHITE">
